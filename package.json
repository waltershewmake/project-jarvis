{
  "name": "project-jarvis",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --ignore-ts-errors && drizzle-kit migrate",
    "start": "pm2-runtime ecosystem.config.cjs",
    "test": "node ace test",
    "format": "biome format . --write",
    "lint": "biome lint . --write",
    "ts-lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && sleep 1 && docker-compose up -d && sleep 5 && pnpm db:migrate && sleep 1 && pnpm db:seed && sleep 1 && pnpm session create root",
    "db:generate": "turbo build --env-mode=loose && drizzle-kit generate",
    "db:generate:custom": "drizzle-kit generate --custom",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "turbo build --env-mode=loose && drizzle-kit push",
    "db:seed": "tsx database/seed.ts",
    "db:check": "drizzle-kit check",
    "dev:docs": "cd docs && mintlify dev",
    "jarvis": "tsx cli/index.ts"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#auth/*": "./app/auth/*.js",
    "#env": "./start/env.js",
    "#db": "./database/index.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.6.5",
    "@types/node": "^20.14.9",
    "drizzle-kit": "^0.23.0",
    "hot-hook": "^0.2.6",
    "pino-pretty": "^11.2.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.4",
    "typescript": "~5.4"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.3",
    "@adonisjs/core": "^6.12.1",
    "@adonisjs/cors": "^2.2.1",
    "@biomejs/biome": "^1.8.3",
    "@clack/prompts": "^0.7.0",
    "@types/cli-progress": "^3.11.6",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@vinejs/vine": "^2.1.0",
    "argon2": "^0.40.3",
    "axios": "^1.7.2",
    "cli-progress": "^3.12.0",
    "drizzle-orm": "^0.32.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "openapi-types": "7",
    "pm2": "^5.4.2",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.2"
  },
  "hotHook": {
    "boundaries": ["./app/controllers/**/*.ts", "./app/middleware/*.ts"]
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
